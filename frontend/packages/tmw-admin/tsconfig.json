{
  "compilerOptions": {
    "module": "es6", // Target module resolution
    "moduleResolution": "Node", // Current module resolution
    "target": "es2020", // Target ECMA version
    "lib": ["es2020", "dom"], // Current ECMA version
    "sourceMap": true,
    "jsx": "preserve",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./public/",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".env"
  ],
  "exclude": [
    "node_modules"
  ]
}
