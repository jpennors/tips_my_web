{
  "compilerOptions": {
    "module": "es6", // Target module resolution
    "moduleResolution": "Node", // Current module resolution
    "target": "es2020", // Target ECMA version
    "lib": ["es2020", "dom"], // Current ECMA version
    "baseUrl": ".",
    "paths": {
      "tmw-main/*": ["src/app-main/*"],
      "tmw-admin/*": ["src/app-admin/*"],
      "tmw-common/*": ["src/common/*"]
    },
    "sourceMap": true,
    "jsx": "preserve",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"]
}
